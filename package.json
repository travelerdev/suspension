{
  "name": "suspension",
  "version": "0.1.0",
  "description": "React hooks and utilities for using Suspense with existing APIs",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "webpack",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackdotcomputer/suspension.git"
  },
  "keywords": [
    "react",
    "suspense",
    "concurrent",
    "experimental",
    "frontend",
    "hook",
    "typescript"
  ],
  "author": "Zack Sheppard (@zackdotcomputer)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zackdotcomputer/suspension/issues"
  },
  "homepage": "https://github.com/zackdotcomputer/suspension#readme",
  "peerDependencies": {
    "react": ">=16.13.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.15",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.0",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "react": "^17.0.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^6.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7"
  },
  "files": [
    "lib",
    "esm",
    "umd"
  ],
  "dependencies": {
    "is-promise": "^4.0.0"
  }
}
